    "test": "jest --passWithNoTests",
    "lint": "echo Checking for lint errors... && eslint ./src --ext .ts && stylelint \"./src/**/*.scss\"",
    "lint:fix": "echo Checking and fixing lint errors... && eslint ./src --fix --ext .ts && stylelint \"./src/**/*.scss\" --fix",
    "webpack:firefox-mobile": "webpack --config ./webpack/firefox.config.js",
    "build:firefox-mobile": "npm run lint:fix && echo Building platform FIREFOX to ./build/firefox... && rimraf ./build/firefox && npm run webpack:firefox",
    "build:firefox-mobile:dev": "npm run build:firefox -- -- --mode=development",
    "watch:firefox-mobile": "npm run build:firefox:dev -- --watch",
    "package:firefox-mobile": "npm run build:firefox && echo Packaging platform FIREFOX... && node ./scripts/update-build-number.js firefox && node ./scripts/create-zip-package.js firefox",
    "postpackage:firefox-mobile": "echo Package saved to ./dist",
  },
