{
  "name": "xbrowsersync-app",
  "description": "The xBrowserSync client app.",
  "version": "1.6.0",
  "author": "xBrowserSync",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/xbrowsersync/app.git"
  },
  "bugs": {
    "url": "https://github.com/xbrowsersync/app/issues"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{019b606a-6f61-4d01-af2a-cea528f606da}",
      "strict_min_version": "75.0"
    }
  },
  "scripts": {
    "lint": "echo Checking for lint errors... && eslint ./src --ext .ts && stylelint \"./src/**/*.scss\"",
    "lint:fix": "echo Checking and fixing lint errors... && eslint ./src --fix --ext .ts && stylelint \"./src/**/*.scss\" --fix",
    "webpack:chromium": "webpack --config ./webpack/chromium.config.js",
    "build:chromium": "npm run lint:fix && echo Building platform CHROMIUM to ./build/chromium... && rimraf ./build/chromium && npm run webpack:chromium",
    "build:chromium:dev": "npm run build:chromium -- -- --mode=development",
    "watch:chromium": "npm run build:chromium:dev -- --watch",
    "package:chromium": "npm run build:chromium && echo Packaging platform CHROMIUM... && node ./scripts/update-build-number.js chromium && node ./scripts/create-zip-package.js chromium",
    "postpackage:chromium": "echo Package saved to ./dist",
    "webpack:firefox": "webpack --config ./webpack/firefox.config.js",
    "build:firefox": "npm run lint:fix && echo Building platform FIREFOX to ./build/firefox... && rimraf ./build/firefox && npm run webpack:firefox",
    "build:firefox:dev": "npm run build:firefox -- -- --mode=development",
    "watch:firefox": "npm run build:firefox:dev -- --watch",
    "package:firefox": "npm run build:firefox && echo Packaging platform FIREFOX... && node ./scripts/update-build-number.js firefox && node ./scripts/create-zip-package.js firefox",
    "postpackage:firefox": "echo Package saved to ./dist",
    "webpack:android": "webpack --config ./webpack/android.config.js",
    "build:android": "npm run lint:fix && echo Building platform ANDROID to ./build/android... && rimraf ./build/android && npm run webpack:android",
    "build:android:dev": "npm run build:android -- -- --mode=development",
    "watch:android": "npm run build:android:dev -- --watch",
    "package:android": "npm run build:android && echo Packaging platform ANDROID... && node ./scripts/update-build-number.js android && node ./scripts/create-apk-package.js",
    "postpackage:android": "echo Package saved to ./dist"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "angular": "^1.8.2",
    "angular-animate": "^1.8.2",
    "angular-filter": "^0.5.17",
